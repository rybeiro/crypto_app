<p id="notice"><%= notice %></p>
<h1><%= @coins.model_name.human(count: 2)%></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:url_image) %></th>
      <th colspan="3"><%= t("link.action")%></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag(coin.url_image, size:'24') %></td>
        <td><%= link_to t("link.show"), coin, class: "btn btn-primary" %></td>
        <td><%= link_to t("link.edit"), edit_coin_path(coin), class: "btn btn-primary" %></td>
        <td><%= link_to t("link.destroy"), coin, class: "btn btn-primary", method: :delete, data: { confirm: t("confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("link.new"), new_coin_path, class: "btn btn-primary" %>
